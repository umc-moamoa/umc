<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.umc_hackathon">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".SeolmunZipApplication"
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Umc_hackathon"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".auth.NicknameChangeActivity"
            android:exported="false" />
        <activity
            android:name=".my.survey.MyAnswerActivity"
            android:exported="false" />
        <activity
            android:name="com.kakao.sdk.auth.AuthCodeHandlerActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="oauth"
                    android:scheme="@string/kakao_redirection_scheme" />
            </intent-filter>
        </activity>
        <activity
            android:name=".post.modify.ModifyActivity"
            android:exported="false" />
        <activity
            android:name=".auth.AuthActivity"
            android:exported="false" />
        <activity
            android:name=".StartActivity"
            android:exported="true"
            android:theme="@style/Theme.Design.Light.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.umc_hackathon.survey.result.ResultActivity"
            android:exported="false" />
        <activity
            android:name=".survey.QuestionItemActivity"
            android:exported="false" />
        <activity
            android:name=".survey.DialogOptionItemActivity"
            android:exported="false" />
        <activity
            android:name=".my.survey.MySurveyActivity"
            android:exported="false" />
        <activity
            android:name=".my.survey.ParticipatedSurveyActivity"
            android:exported="false" />
        <activity
            android:name=".my.survey.InterestSurveyActivity"
            android:exported="false" />
        <activity
            android:name=".my.point.MyPointActivity"
            android:exported="false" />
        <activity
            android:name=".auth.SettingActivity"
            android:exported="false" />
        <activity
            android:name=".my.MyPageActivity"
            android:exported="false" />
        <activity
            android:name=".post.MainActivity"
            android:exported="false" />
        <activity
            android:name=".survey.create.FormCreateActivity"
            android:exported="false" />
        <activity
            android:name=".survey.participate.FormInputActivity"
            android:exported="false" />
        <activity
            android:name=".post.detail.PostDetailActivity"
            android:exported="false" />
        <activity
            android:name=".post.list.FormListActivity"
            android:exported="false" />
    </application>

</manifest>