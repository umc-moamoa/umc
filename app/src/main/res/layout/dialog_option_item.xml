<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="5dp">

    <LinearLayout
        android:id="@+id/dialog_option_item_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingHorizontal="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/dialog_option_item_unselected_iv"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/ic_write_circle_unselected" />

        <EditText
            android:id="@+id/dialog_option_item_et"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:layout_weight="1"
            android:background="@null"
            android:hint="옵션을 입력하세요" />

        <ImageView
            android:id="@+id/dialog_option_item_delete_iv"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/ic_option_delete" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>