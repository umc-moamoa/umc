<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/board_point_item_cv"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:layout_marginHorizontal="20dp"
    android:layout_marginVertical="7.5dp"
    android:backgroundTint="#F4F4F4"
    app:cardCornerRadius="15dp"
    app:cardElevation="10dp">

    <TextView
        android:id="@+id/board_point_item_state_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="28dp"
        android:fontFamily="@font/roboto_medium"
        android:text=""
        android:textColor="@color/black"
        android:textSize="14sp" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginStart="80dp"
        android:backgroundTint="@color/white"
        app:cardCornerRadius="15dp"
        app:cardElevation="10dp">

        <LinearLayout
            android:id="@+id/board_point_item_ll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingHorizontal="20dp"
            android:paddingTop="18dp">

            <TextView
                android:id="@+id/board_point_item_date_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_medium"
                android:text=""
                android:textColor="#707070"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/board_point_item_point_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:fontFamily="@font/roboto_medium"
                android:text=""
                android:textColor="@color/lavender_pink"
                android:textSize="14sp" />

        </LinearLayout>


    </androidx.cardview.widget.CardView>

</androidx.cardview.widget.CardView>