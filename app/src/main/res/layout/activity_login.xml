<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pale_grey"
    tools:context=".LoginActivity">

    <View
        android:id="@+id/login_title_view"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_marginTop="30dp"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/ic_folder_purple" />

    <TextView
        android:id="@+id/login_join_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/roboto_bold"
        android:text="설문 ZIP"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/login_join_tabs_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="55dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/login_join_title_tv">

        <Button
            android:id="@+id/login_login_btn"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_marginVertical="5dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/btn_style"
            android:fontFamily="@font/roboto_bold"
            android:text="로그인"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/login_join_btn"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_marginVertical="5dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/btn_off_style"
            android:fontFamily="@font/roboto_bold"
            android:text="회원가입"
            android:textColor="#dadce5"
            android:textSize="16sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/setting_login_join_input_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="29dp"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingVertical="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/login_join_tabs_ll">

        <androidx.cardview.widget.CardView
            android:id="@+id/login_email_cv"
            android:layout_width="280dp"
            android:layout_height="50dp"
            android:layout_marginVertical="10dp"
            app:cardCornerRadius="25dp">

            <LinearLayout
                android:id="@+id/login_email_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:paddingStart="25dp"
                android:paddingEnd="25dp">

                <ImageView
                    android:id="@+id/login_email_iv"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_gravity="center"
                    android:layout_marginEnd="15dp"
                    android:src="@mipmap/ic_login_mail" />

                <EditText
                    android:id="@+id/login_email_et"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@android:color/transparent"
                    android:fontFamily="@font/roboto_medium"
                    android:hint="E-mail"
                    android:textSize="14sp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/login_password_cv"
            android:layout_width="280dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            app:cardCornerRadius="25dp">

            <LinearLayout
                android:id="@+id/login_password_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:paddingStart="25dp"
                android:paddingEnd="25dp">

                <ImageView
                    android:id="@+id/login_password_iv"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_gravity="center"
                    android:layout_marginEnd="15dp"
                    android:src="@mipmap/ic_login_lock" />

                <EditText
                    android:id="@+id/login_password_et"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@android:color/transparent"
                    android:fontFamily="@font/roboto_medium"
                    android:hint="Password"
                    android:textSize="14sp"
                    tools:ignore="TouchTargetSizeCheck" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <Button
        android:id="@+id/login_submit_btn"
        android:layout_width="160dp"
        android:layout_height="40dp"
        android:layout_marginTop="35dp"
        android:background="@drawable/btn_style"
        android:fontFamily="@font/roboto_bold"
        android:text="로그인"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/setting_login_join_input_ll" />

    <LinearLayout
        android:id="@+id/login_social_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/login_submit_btn">

        <ImageView
            android:id="@+id/login_kakao_iv"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@mipmap/btn_login_kakao" />

        <ImageView
            android:id="@+id/login_naver_iv"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginHorizontal="22dp"
            android:src="@drawable/ic_bt_login_naver" />

        <ImageView
            android:id="@+id/login_facebook_iv"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@mipmap/btn_login_facebook" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/login_join_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="49dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/login_social_ll">

        <TextView
            android:id="@+id/login_recommend_signup_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="2.5dp"
            android:fontFamily="@font/roboto_bold"
            android:text="아직 회원이 아니신가요?"
            android:textColor="#767676"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/login_go_signup_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="2.5dp"
            android:fontFamily="@font/roboto_bold"
            android:text="회원가입"
            android:textColor="@color/greyish_brown"
            android:textSize="14sp"
            android:textStyle="bold" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>