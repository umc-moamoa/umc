<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="300dp">

    <View
        android:id="@+id/board_my_survey_item_folder_view"
        android:layout_width="260dp"
        android:layout_height="300dp"
        android:background="@drawable/ic_my_survey_item_folder"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/board_my_survey_item_ll"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginVertical="80dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/board_my_survey_item_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_bold"
            android:text="음식 배달 플랫폼에 대한 소비자 인식"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/board_my_survey_item_count_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:fontFamily="@font/roboto_light"
            android:text="11개의 항목"
            android:textColor="@color/black"
            android:textSize="11sp" />

        <LinearLayout
            android:id="@+id/board_my_survey_item_point_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/board_my_survey_item_point_iv"
                android:layout_width="11dp"
                android:layout_height="11dp"
                android:layout_marginEnd="5dp"
                android:src="@drawable/ic_mypage_point_black" />

            <TextView
                android:id="@+id/board_my_survey_item_point_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_medium"
                android:text="300P"
                android:textColor="@color/black"
                android:textSize="11sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/board_my_survey_item_people_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/board_my_survey_item_people_iv"
                android:layout_width="11dp"
                android:layout_height="11dp"
                android:layout_marginEnd="5dp"
                android:src="@drawable/ic_mypage_person" />

            <TextView
                android:id="@+id/board_my_survey_item_people_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_medium"
                android:text="6명 참여"
                android:textColor="@color/dodger_blue"
                android:textSize="11sp" />

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>