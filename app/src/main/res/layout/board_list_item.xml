<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/board_list_item_cv"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:layout_marginHorizontal="20dp"
    android:layout_marginVertical="10dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="10dp">

    <LinearLayout
        android:id="@+id/board_list_item_ll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/list_item_style"
        android:orientation="vertical"
        android:paddingHorizontal="30dp"
        android:paddingVertical="22dp">

        <TextView
            android:id="@+id/board_list_item_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_medium"
            android:text="사회현상에 대한 소비자 인식"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <LinearLayout
            android:id="@+id/board_list_item_info_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/board_list_item_count_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_light"
                android:text="11개의 항목"
                android:textColor="@color/black"
                android:textSize="11sp" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <LinearLayout
                android:id="@+id/board_list_item_point_ll"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="bottom"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/board_list_item_coin_iv"
                    android:layout_width="12dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_mypage_point_blue" />

                <TextView
                    android:id="@+id/board_list_item_coin_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:fontFamily="@font/roboto_medium"
                    android:text="300P"
                    android:textColor="@color/dodger_blue"
                    android:textSize="10sp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>