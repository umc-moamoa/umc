<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pale_grey"
    tools:context=".JoinActivity">

    <View
        android:id="@+id/join_title_view"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_marginTop="30dp"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/ic_folder_purple" />

    <TextView
        android:id="@+id/login_join_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/roboto_bold"
        android:text="설문 ZIP"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/login_join_tabs_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="55dp"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/login_join_title_tv">

        <Button
            android:id="@+id/join_login_btn"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_marginVertical="5dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/btn_off_style"
            android:fontFamily="@font/roboto_bold"
            android:text="로그인"
            android:textColor="#dadce5"
            android:textSize="16sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/join_join_btn"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_marginVertical="5dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/btn_style"
            android:fontFamily="@font/roboto_bold"
            android:text="회원가입"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/setting_login_join_input_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/login_join_tabs_ll">

        <LinearLayout
            android:id="@+id/join_id_duplicate_check_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:id="@+id/join_id_cv"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginVertical="10dp"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="5dp"
                android:layout_weight="2"
                app:cardCornerRadius="25dp">

                <EditText
                    android:id="@+id/join_id_et"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginVertical="8dp"
                    android:layout_marginStart="20dp"
                    android:background="@android:color/transparent"
                    android:fontFamily="@font/roboto_medium"
                    android:hint="아이디"
                    android:textSize="14sp" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/join_id_duplicate_check_cv"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginVertical="10dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="40dp"
                android:layout_weight="5"
                app:cardCornerRadius="25dp">

                <EditText
                    android:id="@+id/join_id_duplicate_check_et"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:fontFamily="@font/roboto_medium"
                    android:gravity="center"
                    android:hint="중복확인"
                    android:textSize="14sp" />

            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/setting_nickname_cv"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginHorizontal="40dp"
            android:layout_marginVertical="10dp"
            app:cardCornerRadius="25dp">

            <EditText
                android:id="@+id/join_nickname_et"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginVertical="8dp"
                android:layout_marginStart="20dp"
                android:background="@android:color/transparent"
                android:fontFamily="@font/roboto_medium"
                android:hint="닉네임"
                android:textSize="14sp" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/setting_notice_cv"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginHorizontal="40dp"
            android:layout_marginVertical="10dp"
            app:cardCornerRadius="25dp">

            <EditText
                android:id="@+id/join_password_et"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginVertical="8dp"
                android:layout_marginStart="20dp"
                android:background="@android:color/transparent"
                android:fontFamily="@font/roboto_medium"
                android:hint="비밀번호"
                android:textSize="14sp" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/setting_secession_cv"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginHorizontal="40dp"
            android:layout_marginVertical="10dp"
            app:cardCornerRadius="25dp">

            <EditText
                android:id="@+id/join_password_check_et"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginVertical="8dp"
                android:layout_marginStart="20dp"
                android:background="@android:color/transparent"
                android:fontFamily="@font/roboto_medium"
                android:hint="비밀번호 확인"
                android:textSize="14sp" />

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <Button
        android:id="@+id/join_submit_btn"
        android:layout_width="160dp"
        android:layout_height="40dp"
        android:layout_marginTop="42dp"
        android:background="@drawable/btn_style"
        android:fontFamily="@font/roboto_bold"
        android:text="회원가입"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/setting_login_join_input_ll"
        tools:ignore="TouchTargetSizeCheck" />

</androidx.constraintlayout.widget.ConstraintLayout>