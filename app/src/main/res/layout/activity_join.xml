<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pale_grey"
    tools:context=".JoinActivity">

    <ImageView
        android:id="@+id/tv_title_join"
        android:layout_width="108dp"
        android:layout_height="79dp"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:src="@mipmap/zip"
        android:text="설문 ZIP"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linear_layout_btns_join"
        app:layout_constraintTop_toBottomOf="@id/tv_title_join"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="60dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/join_page_login_btn"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/btn_off_style"
            android:text="로그인"
            android:fontFamily="@font/roboto_bold"
            android:textColor="#dadce5"
            android:textSize="14sp"
            android:textStyle="bold"
            tools:ignore="TouchTargetSizeCheck" />

        <Button
            android:id="@+id/join_page_join_btn"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_marginStart="20dp"
            android:background="@drawable/btn_style"
            android:text="회원가입"
            android:fontFamily="@font/roboto_bold"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:textStyle="bold"
            tools:ignore="TouchTargetSizeCheck" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_layout_et_join"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/linear_layout_btns_join"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:orientation="vertical"
        android:layout_marginTop="37dp"
        android:gravity="center">

        <LinearLayout
            android:id="@+id/join_page_id_duplicate_check_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:id="@+id/join_page_id_cv"
                android:layout_width="188dp"
                android:layout_height="50dp"
                android:layout_marginStart="65dp"
                android:layout_marginVertical="10dp"
                app:cardCornerRadius="30dp"
                app:cardElevation="10dp">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="15dp"
                    android:layout_marginVertical="8dp"
                    android:background="@android:color/transparent"
                    android:hint="아이디"
                    android:fontFamily="@font/roboto_medium"
                    android:textSize="14sp" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/join_page_id_duplicate_check_cv"
                android:layout_width="82dp"
                android:layout_height="50dp"
                android:layout_marginStart="10dp"
                android:layout_marginVertical="10dp"
                app:cardCornerRadius="30dp"
                app:cardElevation="10dp">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="15dp"
                    android:layout_marginVertical="8dp"
                    android:background="@android:color/transparent"
                    android:hint="중복확인"
                    android:fontFamily="@font/roboto_medium"
                    android:textSize="14sp" />

            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/et_nickname_join"
            android:layout_width="281dp"
            android:layout_height="51dp"
            android:layout_marginHorizontal="40dp"
            android:layout_marginVertical="10dp"
            app:cardCornerRadius="30dp"
            app:cardElevation="10dp">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="15dp"
                android:layout_marginVertical="8dp"
                android:background="@android:color/transparent"
                android:hint="닉네임"
                android:fontFamily="@font/roboto_medium"
                android:textSize="14sp" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/et_password_join"
            android:layout_width="281dp"
            android:layout_height="51dp"
            app:cardCornerRadius="30dp"
            app:cardElevation="10dp"
            android:layout_marginHorizontal="40dp"
            android:layout_marginVertical="10dp">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="15dp"
                android:layout_marginVertical="8dp"
                android:background="@android:color/transparent"
                android:hint="비밀번호"
                android:fontFamily="@font/roboto_medium"
                android:textSize="14sp" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/et_password_check_join"
            android:layout_width="281dp"
            android:layout_height="51dp"
            app:cardCornerRadius="30dp"
            app:cardElevation="10dp"
            android:layout_marginHorizontal="40dp"
            android:layout_marginVertical="10dp">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="15dp"
                android:layout_marginVertical="8dp"
                android:background="@android:color/transparent"
                android:hint="비밀번호 확인"
                android:fontFamily="@font/roboto_medium"
                android:textSize="14sp" />

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <Button
        android:id="@+id/btn_login_submit"
        android:layout_width="160dp"
        android:layout_height="40dp"
        android:layout_marginTop="42dp"
        android:background="@drawable/btn_style"
        android:text="회원가입"
        android:fontFamily="@font/roboto_bold"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/linear_layout_et_join"
        tools:ignore="TouchTargetSizeCheck" />

</androidx.constraintlayout.widget.ConstraintLayout>