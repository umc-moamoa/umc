<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:background="@color/pale_grey"
    android:orientation="vertical"
    tools:context=".FormListActivity">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:fontFamily="@font/roboto_bold"
        android:gravity="center_horizontal"
        android:text="설문조사"
        android:textColor="@color/black"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <LinearLayout
        android:id="@+id/linear_layout_btns_form"
        app:layout_constraintTop_toBottomOf="@id/tv_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/btn_market"
            android:layout_width="76dp"
            android:layout_height="38dp"
            android:text="마케팅"
            android:fontFamily="@font/roboto_regular"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:background="@drawable/btn_style" />

        <Button
            android:id="@+id/btn_social"
            android:layout_width="76dp"
            android:layout_height="38dp"
            android:layout_marginStart="17dp"
            android:text="사회현상"
            android:fontFamily="@font/roboto_regular"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:background="@drawable/btn_style" />

        <Button
            android:id="@+id/btn_brand"
            android:layout_width="76dp"
            android:layout_height="38dp"
            android:layout_marginStart="17dp"
            android:text="브랜드"
            android:fontFamily="@font/roboto_regular"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:background="@drawable/btn_style" />

        <Button
            android:id="@+id/btn_idea"
            android:layout_width="76dp"
            android:layout_height="38dp"
            android:layout_marginStart="17dp"
            android:text="아이디어"
            android:fontFamily="@font/roboto_regular"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:background="@drawable/btn_style" />

    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#F2F3F7"
        android:paddingVertical="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linear_layout_btns_form">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_list_item"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:listitem="@layout/board_list_item"
            android:clipToPadding="false"
            android:paddingTop="20dp"
            android:paddingBottom="70dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <Button
        android:id="@+id/main_button"
        android:layout_width="160dp"
        android:layout_height="40dp"
        android:background="@drawable/btn_style"
        android:fontFamily="@font/roboto_bold"
        android:text="설문조사 작성"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.955"
        tools:ignore="TouchTargetSizeCheck" />

</androidx.constraintlayout.widget.ConstraintLayout>