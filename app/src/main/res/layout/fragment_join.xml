<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".auth.JoinFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/join_input_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:id="@+id/join_id_duplicate_check_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:id="@+id/join_id_cv"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginVertical="10dp"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="5dp"
                android:layout_weight="1"
                app:cardCornerRadius="25dp"
                app:cardElevation="0dp">

                <EditText
                    android:id="@+id/join_id_et"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginVertical="8dp"
                    android:layout_marginStart="20dp"
                    android:background="@android:color/transparent"
                    android:fontFamily="@font/roboto_medium"
                    android:hint="이메일"
                    android:textSize="14sp" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/join_id_duplicate_check_cv"
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:layout_marginVertical="10dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="40dp"
                app:cardCornerRadius="25dp"
                app:cardElevation="0dp">

                <TextView
                    android:id="@+id/join_id_duplicate_check_tv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:fontFamily="@font/roboto_medium"
                    android:gravity="center"
                    android:hint="중복확인"
                    android:textSize="14sp" />

                <ImageView
                    android:id="@+id/join_id_duplicate_check_yes_iv"
                    android:layout_width="match_parent"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:visibility="invisible"
                    android:src="@drawable/ic_sign_up_check" />

                <ImageView
                    android:id="@+id/join_id_duplicate_check_no_iv"
                    android:layout_width="match_parent"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:visibility="invisible"
                    android:src="@drawable/ic_sign_up_no" />

            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/join_email_send_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:id="@+id/join_email_send_cv"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_marginVertical="10dp"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="40dp"
                app:cardCornerRadius="25dp"
                app:cardElevation="0dp">

                <TextView
                    android:id="@+id/join_email_send_tv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:fontFamily="@font/roboto_medium"
                    android:gravity="center"
                    android:hint="인증번호 전송"
                    android:textSize="14sp" />

            </androidx.cardview.widget.CardView>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/join_email_certificate_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:id="@+id/join_email_certificate_cv"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginVertical="10dp"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="5dp"
                android:layout_weight="1"
                app:cardCornerRadius="25dp"
                app:cardElevation="0dp">

                <EditText
                    android:id="@+id/join_email_certificate_et"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginVertical="8dp"
                    android:layout_marginStart="20dp"
                    android:background="@android:color/transparent"
                    android:fontFamily="@font/roboto_medium"
                    android:hint="인증번호"
                    android:textSize="14sp" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/join_email_certificate_check_cv"
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:layout_marginVertical="10dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="40dp"
                app:cardCornerRadius="25dp"
                app:cardElevation="0dp">

                <TextView
                    android:id="@+id/join_email_certificate_check_et"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:fontFamily="@font/roboto_medium"
                    android:gravity="center"
                    android:hint="인증하기"
                    android:textSize="14sp" />

            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/join_nickname_duplicate_check_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:id="@+id/setting_nickname_modify_cv"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginVertical="10dp"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="5dp"
                android:layout_weight="1"
                app:cardCornerRadius="25dp"
                app:cardElevation="0dp">

                <EditText
                    android:id="@+id/join_nickname_et"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginVertical="8dp"
                    android:layout_marginStart="20dp"
                    android:background="@android:color/transparent"
                    android:fontFamily="@font/roboto_medium"
                    android:hint="닉네임"
                    android:textSize="14sp" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/join_nickname_duplicate_check_cv"
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:layout_marginVertical="10dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="40dp"
                app:cardCornerRadius="25dp"
                app:cardElevation="0dp">

                <TextView
                    android:id="@+id/join_nickname_duplicate_check_tv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:fontFamily="@font/roboto_medium"
                    android:gravity="center"
                    android:hint="중복확인"
                    android:textSize="14sp" />

                <ImageView
                    android:id="@+id/join_nickname_duplicate_check_yes_iv"
                    android:layout_width="match_parent"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:visibility="invisible"
                    android:src="@drawable/ic_sign_up_check" />

                <ImageView
                    android:id="@+id/join_nickname_duplicate_check_no_iv"
                    android:layout_width="match_parent"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:visibility="invisible"
                    android:src="@drawable/ic_sign_up_no" />

            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/setting_alarm_cv"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginHorizontal="40dp"
            android:layout_marginVertical="10dp"
            app:cardCornerRadius="25dp"
            app:cardElevation="0dp">

            <EditText
                android:id="@+id/join_password_et"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginVertical="8dp"
                android:layout_marginStart="20dp"
                android:background="@android:color/transparent"
                android:fontFamily="@font/roboto_medium"
                android:hint="비밀번호"
                android:inputType="textPassword"
                android:textSize="14sp" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/join_password_limit_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:text="영문, 숫자, 특수문자를 조합해 7-15자를 입력해주세요"
            android:textSize="10sp" />

        <androidx.cardview.widget.CardView
            android:id="@+id/setting_quit_cv"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginHorizontal="40dp"
            android:layout_marginVertical="10dp"
            app:cardCornerRadius="25dp"
            app:cardElevation="0dp">

            <EditText
                android:id="@+id/join_password_check_et"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginVertical="8dp"
                android:layout_marginStart="20dp"
                android:background="@android:color/transparent"
                android:fontFamily="@font/roboto_medium"
                android:hint="비밀번호 확인"
                android:inputType="textPassword"
                android:textSize="14sp" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/join_password_check_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:visibility="invisible"
            android:text="비밀번호 일치 확인"
            android:textSize="10sp" />

        <Button
            android:id="@+id/join_submit_btn"
            android:layout_width="160dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginTop="45dp"
            android:layout_marginBottom="2dp"
            android:background="@drawable/category_selected"
            android:fontFamily="@font/roboto_bold"
            android:text="회원가입"
            android:textColor="@color/white"
            android:textStyle="bold"
            tools:ignore="TouchTargetSizeCheck" />

    </LinearLayout>
    </ScrollView>
</FrameLayout>